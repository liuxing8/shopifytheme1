<script>
  var loadCSS = function(link) {
    var cssFile = document.createElement('link'); 
    cssFile.rel = 'stylesheet';
    cssFile.href = link;
    cssFile.media = 'only x';

    cssFile.addEventListener('load', function onloadCSS() {
      cssFile.media = 'all';
      cssFile.removeEventListener('load', onloadCSS);
    });

    var elemInsert = document.getElementsByTagName('style')[0]; 
    elemInsert.parentNode.insertBefore(cssFile, elemInsert.nextSibling);      
  };

  loadCSS('{{ "style.scss.css" | asset_url }}');

  // Index page
  {% if settings.homepage_slideshow_enable and template == 'index' %}
    loadCSS('{{ "flexslider.css" | asset_url }}');
  {% endif %}

  {% if settings.homepage_featured_enable and template == 'index' %}
    loadCSS('{{ "swiper.min.css" | asset_url }}');
  {% endif %}

  // Product page
  {% if template == 'product' %}
    loadCSS('{{ "flexslider.css" | asset_url }}');
  {% endif %}

  {% if template contains 'product' %}
    loadCSS('{{ "swiper.min.css" | asset_url }}');
  {% endif %}

  // Page about us and landing page
  {% if template contains 'page' %}
    loadCSS('{{ "swiper.min.css" | asset_url }}');
    loadCSS('{{ "flipclock.css" | asset_url }}');
  {% endif %}

</script> 

