<!-- *** Footer *** -->
<footer class="footer footer--boxed {% unless settings.footer_social_enable %}social-disable{% endunless %} {% unless settings.footer_show_methods_of_payment %}payment-disable{% endunless %}">

  <div class="wrapper">
    <div class="grid">

      <div class="footer-container">
        {% comment %}
        Contact information.
        For setting go to Admin -> Theme -> Customize Theme -> Footer
        {% endcomment %} 
        <div class="grid__item large--one-third medium--one-third one-whole footer__item footer__item--contact {% if settings.footer_show_methods_of_payment %}footer__item--contact-half{% endif %}">
          {% if settings.footer_address_text != blank %}
            <h4 class="heading--add-small">{{ settings.footer_second_menu_heading | upcase }}</h4>
            <div>{{ settings.footer_address_text }}</div>
          {% endif %}
        </div>
            
        {% comment %}
        Footer menu.
        For setting go to Admin -> Theme -> Customize Theme -> Footer
        {% endcomment %}
        <div class="grid__item large--one-third medium--one-third one-whole footer__item footer__item--menu">
          <h4 class="heading--add-small">{{ settings.footer_menu_heading | upcase }}</h4>
          <ul class="footer-list">
            {% for link in linklists[settings.footer_quicklinks_linklist].links %}
              <li class="footer-list__item">
                <a class="footer-list__link" href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        
        {% comment %}
        Social media icons.
        For setting go to Admin -> Theme -> Customize Theme -> Footer
        {% endcomment %}
        <div class="grid__item large--one-third medium--one-third one-whole footer__item footer__item--social">
          <h4 class="heading--add-small">{{ settings.footer_social_heading | upcase }}</h4>
          {% include 'social-links' %}
        </div>
      </div>
    </div><!-- end grid -->
  </div><!-- end wrapper-->

  {% include 'footer-copyright' %}

</footer>
<!-- *** End footer *** -->
